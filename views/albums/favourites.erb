<h2>Your Favourite Albums</h2>

<ul>
  <% for album in @albums %>
    <% if album.favourite? %>
      <li class="index">
        <a href='/albums/<%=album.id%>/show'> <%=album.title%> </a>
        <a href="/<%=album.id%>/toggle-favourite/favourites-index">

          <% if album.favourite? %>
            <i class="fas fa-star"></i>
          <% else %>
            <i class="far fa-star"></i>
          <% end %>
        </a>

      </li>
    <% end %>
  <% end %>

</ul>
