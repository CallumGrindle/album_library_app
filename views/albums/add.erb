<h2>Add a new album</h2>

<form class="" action="/albums/add" method="get">

  <input type="text" name="search_album" value="">
  <input type="submit" name="" value="Go!">

</form>

<% if params[:search_album] %>
<h3>Did you mean:</h3>
<% counter = 0 %>
<% for album in search_album("#{params[:search_album]}") %>
  <ul>
  <li><a href="/albums/<%=album.name%>/<%=counter%>/save"><%= album.name %> by <%= album.artists[0].name %></a></li>
  <% counter += 1 %>
  <% break if counter > 3 %>
  <% end %>
  </ul>
<% end %>
